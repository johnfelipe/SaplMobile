<?xml version="1.0" encoding="utf-8"?>
<br.leg.interlegis.saplmobile.sessao.view.popups.MateriaDetalhes xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ItemListaMaterias"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="true"
                    android:orientation="horizontal"  >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Protocolo: "
                        android:textColor="#a00" />

                    <TextView
                        android:id="@+id/sessao_plenaria_materia_protocolo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#a00"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/sessao_plenaria_materia_ementa"
                    style="@style/SPItemListaMateriasEmenta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:text="Por favor, Aguarde... carregando detalhes da matéria..."/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/targe_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/sessao_plenaria_materia_btn_open_file_image"
                        style="@style/SPItemListaMateriasBtnOpenFileImage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:clickable="true"
                        android:contentDescription="Texto Integral"
                        android:src="@drawable/icon_open_file" />

                    <TextView
                        android:id="@+id/sessao_plenaria_materia_btn_open_file_text"
                        style="@style/SPItemListaMateriasBtnOpenFileImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:clickable="true"
                        android:gravity="center"
                        android:text="Texto Integral"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="#fafaf4"
            android:orientation="horizontal" >

            <TextView
                style="@style/SPItemListaMateriasAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="AUTOR(ES):" />

            <TextView
                android:id="@+id/sessao_plenaria_materia_autor"
                style="@style/SPItemListaMateriasAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/sessao_plenaria_materia_dat_apresentacao"
                style="@style/SPItemListaMateriasDatApresentacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/popup_titulo_materias_doc_acessorios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:visibility="gone" >

                <TextView 
                    style="@style/baseTitulo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DOCUMENTOS ACESSÓRIOS"  />

                
            <LinearLayout
                android:id="@+id/popup_container_materias_doc_acessorios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
        

        <LinearLayout
            android:id="@+id/popup_titulo_materias_anexadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:visibility="gone" >

                <TextView 
                    style="@style/baseTitulo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MATÉRIAS ANEXADAS"
                    android:textSize="20sp"  />

                
            <LinearLayout
                android:id="@+id/popup_container_materias_anexadas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/popup_titulo_materia_anexadora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:visibility="gone" >

                
                <TextView 
                    style="@style/baseTitulo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MATÉRIA ANEXADORA"
                    android:textSize="20sp"  />

                
            <LinearLayout
                android:id="@+id/popup_container_materia_anexadora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/popup_titulo_tramitacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:visibility="gone" >

                <TextView 
                    style="@style/baseTitulo1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRAMITAÇÃO"
                    android:textSize="20sp" />

                
            <LinearLayout
                android:id="@+id/popup_container_tramitacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</br.leg.interlegis.saplmobile.sessao.view.popups.MateriaDetalhes>