<?xml version="1.0" encoding="utf-8"?>
<br.leg.interlegis.saplmobile.sessao.view.SaplPopupView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SPPopupBase"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#9000"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/back_popup_top_bar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/popupDismiss"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dismiss1"
                android:layout_width="16dp"
                android:layout_height="12dp"
                android:rotation="270"
                android:src="@drawable/ic_action_collapse" />

            <ImageView
                android:id="@+id/dismiss2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_launcher" />
        </LinearLayout>
        
            <TextView
                android:id="@+id/titulo"
                style="@style/SPItemListaMateriasTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" />

        <ImageView
            android:id="@+id/dismiss3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel" />
    </LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center_vertical"
        android:background="#0000" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:background="#fff"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/popup_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
 
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</br.leg.interlegis.saplmobile.sessao.view.SaplPopupView>